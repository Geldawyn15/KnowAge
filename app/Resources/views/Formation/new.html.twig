{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %} Créer une formation {% endblock %}

{% block h1 %} Je crée ma formation {% endblock %}

{% block content %}
    <div class="container-fluid ">

        <div class="mb-3 container text-center FormCreate">
            <div class="row">
                {% if (form_errors(form.picture)) %}
                    <div class="col-md-12">
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.picture) }}
                    </div>
                    </div>
                {% endif %}
            </div>
            <div class ="row justify-content-center">
                <div class="col-md-10 mt-4">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Titre</span>
                        </div>
                        {{ form_start(form) }}
                        {{ form_widget(form.title) }}
                    </div>
                </div>
            </div>
            <div class = "row justify-content-center">
                <div class="col-md-10 mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Description</span>
                        </div>
                        {{ form_widget(form.description) }}
                    </div>
                </div>
            </div>
            <div class = "row justify-content-center">
                <div class="col-md-5">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Catégorie</label>
                        </div>
                        {{ form_widget(form.category) }}
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect03">Prix</label>
                        </div>
                        {{ form_widget(form.price) }}
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-10 mb-10">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text inputCreate">Vignette</span>
                            <span class="custom-file ml-4">{{ form_widget(form.picture) }}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center ">
                <div class="col-md-12 mb-4 text-center">
                    <a class="pr-4 pl-4 pb-3 pt-3 text-nowrap text-truncate js-scrollTo Button1"> Etape suivante </a>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <hr>
{% endblock %}