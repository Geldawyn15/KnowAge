{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}S'inscrire{% endblock %}
{% block h1 %}Inscrivez vous{% endblock %}

{% block content %}
<div class="content-signup">
    <div class="container my-5">
        <div class="row bg-second py-4">
            <div class="offset-2 col-8">
                {{ form_start(form) }}
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(form.nickname) }}
                        {{ form_widget(form.nickname) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second) }}
                </div>
                <div>
                    <button class="btn-block btn-lg Button1" type="submit">S'inscrire</button>
                </div>
            </div>

                {{ form_end(form) }}
        </div>
    </div>
</div>


{% endblock %}

