{% extends 'layout.html.twig' %}
{% block title %} Se connecter {% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/login_signup.css">
    <link href="https://fonts.googleapis.com/css?family=Libre+Barcode+39" rel="stylesheet">
{% endblock %}


{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="container-fluid bg_01">
    <div class="row loginSignupLigne1 no-gutters ">
        <div class="col-md-6 offset-md-3 borderTop"></div>
    </div>

    <div class="row no-gutters borderMid loginSignupLigne2 ">
        <div class="col-md-6 offset-md-3">
            <form action="{{ path('login') }} " method="post" class="borderTable loginForm loginSignupformHover" id="effect">

                <div class="form-row no-gutters ligneTable1 align-items-end">
                    <div class="col-md-8 offset-md-2 typo px-3">
                        <h2 class="text-white">Se connecter</h2>
                    </div>
                </div>
                <div class="form-row no-gutters ligneTable3 align-items-center">
                    <div class="col-md-4 offset-md-2 px-3">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Email">
                    </div>
                    <div class="col-md-4 mt-1 px-3">
                        <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe">
                    </div>
                </div>
                <div class="form-row no-gutters ligneTable4 align-items-start">
                    <div class="col-md-4 offset-md-2 mt-1 px-3">
                        <a href="{{ path('signup') }}" class=" btn btn-block text-white btn-outline-secondary waves-effect" role="button">créer son compte</a>
                    </div>
                    <div class="col-md-4 mt-1 px-3">
                        <button type="submit" class="btn btn-block text-white btn-outline-secondary waves-effect">Se connecter</button>
                    </div>
                    <div class="col-md-4 offset-md-2 mt-1 px-3">
                        <input type="checkbox" id="remember_me" name="_remember_me"  />
                        <label for="remember_me">Se souvenir de moi</label>
                    </div>
                    <div class="col-md-4 mt-1 px-3">
                        <a href="{{ path('forgotPassword') }}">Mot de passe oublié</a>
                    </div>


                </div>
            </form>
        </div>
    </div>
    <div class="row loginSignupLigne3 no-gutters ">
        <div class="col-md-6 offset-md-3 borderBot"></div>
    </div>
</div>
{% endblock %}


