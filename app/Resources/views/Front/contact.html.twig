{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Contact{% endblock %}

{% block h1 %}Contactez nous{% endblock %}

{% block breadcrumb %}

{% endblock %}


{% block content %}

    <div class="bg-second py-5">
        <div class="container">
            <h2 class="text-uppercase typo-main">Envoyez nous un message</h2>
            <div class="row">
                <div class="col pr-5">
                    {{ form_start(form) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.message) }}
                    <div class="text-right">
                        {{ form_row(form.submit) }}
                    </div>
                    {{ form_end(form) }}
                </div>
                <div class="col ml-5">
                    <h4 class="typo-main">Contactez nous directement :</h4>
                    <ul class="mt-4 list-unstyled">
                        <li class="mb-4">
                            <i class="fas fa-map-marked-alt fa-2x fa-pull-left mr-5" style="width: 35px"></i>
                            Addresse<br>
                            17 rue Delandine , 69002 LYON
                        </li>
                        <li class="mb-4">
                            <i class="fas fa-mobile-alt fa-2x fa-pull-left mr-5" style="width: 35px"></i>
                            Téléphone : <a href="tel:+06060606">+06-87-06-06-00</a>
                        </li>
                        <li class="mb-4 pt-2">
                            <i class="far fa-envelope fa-2x fa-pull-left mr-5" style="width: 35px"></i>
                            Email : <a href="mailto:contact@knowage.com">hello@knowage.com</a>
                        </li>
                    </ul>
                </div>

                </div>
            </div>

        </div>
    </div>

{% endblock %}
