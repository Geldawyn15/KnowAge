<div class="container">
    {% for formation in formations %}
    {% if  loop.index0  % 3 == 0 %}
    <div class="row">
        {% endif %}
        <div class="col-md-4 mt-5">
            <div class="column">
                <!-- Post-->
                <div class="post-module">
                    <!-- Thumbnail-->
                    <div class="thumbnail">
                        <img src="https://i.imgur.com/7Z8rscT.jpg" class="img-responsive" alt=""> </div>
                    <!-- Post Content-->
                    <div class="post-content">
                        <div class="category">{{ formation.category }}</div>
                        <h1 class="title">{{ formation.title }}</h1>
                        <h2 class="sub_title">par John Utah</h2>
                        <p class="description"> {{ formation.description }}</p>
