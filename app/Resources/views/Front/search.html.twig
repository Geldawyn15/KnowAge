{% extends 'layout.html.twig' %}
{% block title %} Recherche {% endblock %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css2/search.css">{% endblock %}


{% block content %}
    <body>
        {%  if formations is empty and search is empty %}
            <div class="row">
                <div class="col-10 text-center">
                    <p class="emptySearch typo mb-5"> Entrez votre recherche ici : </p>
                </div>
            </div>
            <div class="container">
                <div class="row emptySearchbar">
                    <div class="col-md-12 text-center">
                        <form method="Get" action="{{ path('search') }}">
                            <div class="input-group mb-3">
                                <input type="text" id="search" name="search" class="form-control" placeholder="Recherche..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                                <div class="input-group-append text-align-center">
                                    <a> <button class="btnSearch btn btn-secondary" type="submit"><i class="fas fa-search"></i></button></a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {%  else %}

   <div class="container">
        <div class="row searchbar">
            <div class="col-md-12 text-center">
                <form method="Get" action="{{ path('search') }}">
                    <div class="input-group mb-3">
                        <input type="text" id="search" name="search" class="form-control" placeholder="Recherche..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append text-align-center">
                            <a> <button class="btnSearch btn btn-secondary" type="submit"><i class="fas fa-search"></i></button></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
   {% if formations %}
    <div class="container">
        <div class="row ">
            <div class="col-md-5" >
                <h2 class="searchTitle text-center mb-5 mt-5 typo"> Résultat de la recherche :</h2>
            </div>
        </div>
    </div>
<div class="container">
    {% for formation in formations %}
    {% if  loop.index0  % 3 == 0 %}
    <div class="row mb-5">
        {% endif %}
        <div class="col-md-4 mt-5">
            <div class="column">
                <!-- Post-->
                <div class="post-module">
                    <!-- Thumbnail-->
                    <div class="thumbnail">
                        <img src="{{  formation.picture }}" class="img-responsive" alt="">
                    </div>
                    <!-- Post Content-->
                    <div class="post-content">
                        <div class="category">{{ formation.category }}</div>
                        <h1 class="title">{{ formation.title }}</h1>
                        <h2 class="sub_title">par {{ formation.author.name }} {{  formation.author.firstName}}</h2>
                        <p class="description"> {{  formation.description }}</p>
                        <div class="post-meta">
                            <a href="{{ path('landing_formation', {id: formation.id}) }}" class="btn btn-sm btn-outline-primary waves-effect mr-3">Voir la formation</a>
                            <button class="favoriteSearch btn" data-formation-id=" {{ formation.id }} ">
                                {% if user.isFormationFavorited(formation) %}
                                    <i id="favoriteSearch" class="fas fa-heart fa-2x"  style="color:Tomato"> </i>
                                {% else %}
                                    <i id="favoriteSearch" class="far fa-heart fa-2x"  style="color:Tomato"> </i>
                                {% endif %}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if loop.index % 3 == 0 %}

        {% endif %}
    {% endfor %}
    </div>

</div>

<div class="container">
   {{ knp_pagination_render(formations) }}
</div>
   {% endif %}
        {% endif %}

   {%  if  formations is empty and search is not empty %}
       <div class="row text-center">
           <div class="col-12 mb-5 typo">
               <h3> Votre recherche n'a donné aucun résultat </h3>
           </div>
       </div>
   {% endif %}

<script>
   $(document).ready(function() {
       $('.favoriteSearch').click(function() {
           var icon = $(this).find("i");
           if (icon.hasClass("far")) {
               $.get( '/user/favorite', {
                   formationId: $(this).attr('data-formation-id'),
                   favorited: false
               });
               return icon.removeClass("far").addClass("fas");
           } else {
               $.get( '/user/favorite', {
                   formationId: $(this).attr('data-formation-id'),
                   favorited: true
               });
               return icon.removeClass("fas").addClass("far");
           }
       });
   });
</script>

{% endblock %}
